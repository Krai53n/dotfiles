#!/bin/bash

comment=$1
KAOMOJI=(
        '(<-_-><-_->)' '(* ^ ω ^)' '(￢‿￢ )' '(¯▿¯)'
        '(.❛ ᴗ ❛.)' 'o(≧▽≦)o' '(⌒‿⌒)' '(◕‿◕)'
        '♡( ◡‿◡ )' '(⌒_⌒;)' '(￢_￢;)' '(＃￣0￣)'
        '(╥_╥)' '(×﹏×)' '┐(￣∀￣)┌' '(￣～￣;)'
        'w(°ｏ°)w' '(⊙_⊙)' '(￣▽￣)ノ' '(^_~)'
        )

if [ -z "$comment" ]; then
        size=${#KAOMOJI[@]}
        index=$(($RANDOM % $size))
        comment=${KAOMOJI[$index]}
fi

git add .
git commit -m $comment
git push
